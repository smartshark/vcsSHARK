{
    "name": "vcsSHARK",
    "author": "Fabian Trautsch",
    "version": "2.0.7",
    "plugin_type": "repo",
    "linux_libraries": [
        "build-essential", 
        "libssl-dev", 
        "libffi-dev", 
        "python3-dev", 
        "git", 
        "cmake", 
        "pkg-config", 
        "libcurl3", 
        "libcurl4-gnutls-dev", 
        "libhttp-parser-dev", 
        "libssh2-1", 
        "libssh2-1-dev", 
        "libgit2-dev", 
        "libgit2-24"
    ],
    "created_collections": [
		{
			"name": "commit",
			"shard_key": [{"revision_hash": 1}, {"vcs_system_id": 1}],
            "unique": true
		},
        {
			"name": "file",
			"shard_key": [{"path": 1}, {"vcs_system_id": 1}],
            "unique": true
		},
        {
			"name": "file_action",
			"shard_key": [{"_id": "hashed"}]
		},
        {
			"name": "hunk",
			"shard_key": [{"file_action_id": "hashed"}]
		},
        {
			"name": "people",
			"shard_key": [{"email": 1}, {"name": 1}],
            "unique": true
		},
        {
			"name": "tag",
			"shard_key": [{"name": "1"}, {"commit_id": 1}],
            "unique": true
		},
		{
			"name": "vcs_system",
			"shard_key": [{"url": "hashed"}]
		}
	],
    "description": "Plugin to get the history of a project from a GIT repository.",
    "requires": [
    ],
    "arguments": [
        {
            "name": "plugin_path",
            "required": true,
            "position": 1,
            "type": "install",
            "description": "path to root folder of plugin"
        },
        {
            "name": "plugin_path",
            "required": true,
            "position": 1,
            "type": "execute",
            "description": "path to root folder of plugin"
        },
        {
            "name": "path",
            "required": true,
            "position": 2,
            "type": "execute",
            "description": "path to the project repository"
        },
        {
            "name": "project_name",
            "required": true,
            "position": 3,
            "type": "execute",
            "description": "name of the project"
        },
        {
            "name": "log_level",
            "required": false,
            "position": 4,
            "type": "execute",
            "description": "debug choices (INFO, DEBUG, WARNING, ERROR)"
        },
        {
            "name": "db_hostname",
            "required": true,
            "position": 5,
            "type": "execute",
            "description": "hostname of the server, where the mongodb runs on"
        },
        {
            "name": "db_port",
            "required": true,
            "position": 6,
            "type": "execute",
            "description": "port on which the mongodb is listening on"
        },
        {
            "name": "db_database",
            "required": true,
            "position": 7,
            "type": "execute",
            "description": "name of the database in the mongodb"
        },
        {
            "name": "db_user",
            "required": false,
            "position": 8,
            "type": "execute",
            "description": "database user for the mongodb"
        },
        {
            "name": "db_password",
            "required": false,
            "position": 9,
            "type": "execute",
            "description": "password for the user of the mongodb"
        },
        {
            "name": "db_authentication",
            "required": false,
            "position": 10,
            "type": "execute",
            "description": "database against which users are authenticated"
        },
        {
            "name": "ssl_enabled",
            "required": false,
            "position": 11,
            "type": "execute",
            "description": "needs to be set if database uses ssl connection"
        },
		{
            "name": "cores_per_job",
            "required": false,
            "position": 12,
            "type": "execute",
            "description": "number of cores per job"
        }
    ]
}